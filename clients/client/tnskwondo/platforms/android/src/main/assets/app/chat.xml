<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded" >  
<Page.actionBar>  
<ActionBar>  
 <ActionBar.actionItems> 
<ActionItem tap="logout" text="Logout"/>  
 </ActionBar.actionItems>  
</ActionBar>  
</Page.actionBar>  
 <GridLayout columns="2*,*" rows="auto, *">  
 <TextField id="tf1" hint="Enter text" text="prova" row="0" />  
 <Button col="1" text="Add" onTap="onTap" row="0" />


 <ListView id="lv1"  colSpan="2" row="1">  
 <ListView.itemTemplate>  
 <GridLayout columns="*,*,*" class="messages">

 <Label text="{{ nickname }}" />  
 <Label text="{{ text }}" col="1" />  
 <Label text="{{ time}}" col="2" /> 
 </GridLayout>

</ListView.itemTemplate>  
</ListView>  
</GridLayout>  

</Page>  