<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
 xmlns:PullRefresh="nativescript-pulltorefresh"
 loaded="pageLoaded">
   <ActionBar title="{{title}}" cssClass="actionbar">
  
	 <NavigationButton android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    <ActionBar.actionItems>
	    
        <!--<ActionItem text="Gare"  ios.position="left" android.position="left" />
        <ActionItem text="right" ios.position="right"/>-->
        <ActionItem text="Refresh"   ios.position="right"  android.position="popup" tap="refresh"/>

      </ActionBar.actionItems>
	</ActionBar> 

  <StackLayout style="height: 100%">
  <ActivityIndicator visibility="collapsed" width="20" height="20" style="right: 10; color: yellow;" id="ai" busy="{{busy}}" /> 
      <PullRefresh:PullToRefresh refresh="refresh" refreshing="{{busy}}"> 
  <WebView src="{{ html }}" />
      </PullRefresh:PullToRefresh>
 </StackLayout>
</Page>