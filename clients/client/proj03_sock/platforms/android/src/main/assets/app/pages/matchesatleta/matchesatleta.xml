<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
   <Page.actionBar>
     <!--<ActionBar title="Title">
      <NavigationButton text="Gare"/>
    </ActionBar>-->
    <ActionBar title="Matches atleta" cssClass="actionbar">
	  <NavigationButton android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
      <ActionBar.actionItems>
	    
        <!--<ActionItem text="Gare"  ios.position="left" android.position="left" />
        <ActionItem text="right" ios.position="right"/>-->
        <ActionItem text="pop"   ios.position="right"  android.position="popup"/>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
 	  <!--<ScrollView>-->
<StackLayout orientation="vertical" >

  <Button cssClass="sectionbut" id="lbtitle" tap="toggleMatches" scssClass="atleta" smargin="5" style="width: 100%; background-color: lightblue; color: black; spadding: 5; height: 40;"/>
 <ListView  id="lvcaz" visibility="collapsed" sitemTap="matchTap">
 <ListView.itemTemplate>

	<StackLayout id="sl" orientation="horizontal"/>
   </ListView.itemTemplate>
 </ListView>
   <ListView  id="lvprog" visibility="visible" itemTap="matchTap">
	 <ListView.itemTemplate>
	 <StackLayout orientation="horizontal">
	   <StackLayout  cssClass="session-container" width="50">
	    
		 
		 <Image id="imgmatch" width="36" height="36" src="{{ doc.imgurl }}" />
	   </StackLayout>
	   <StackLayout cssClass="session-container" orientation="vertical">
       <Label text="{{ doc.matchid}}" textWrap="true" cssClass="match"  />
	   <Label text="{{ doc.atletaname }}" textWrap="true" cssClass="atleta" />
	   <Label text="{{ doc.dadisputare=='yes' ? doc.risultext : 'Non disputabile' }}" textWrap="true" cssClass="{{ doc.dadisputare=='yes' ? 'risult' : 'risult_nondisputabile' }}" />
	  </StackLayout> 
	 </StackLayout> 
    </ListView.itemTemplate>
	</ListView>

<StackLayout>

  <Button tap="toggleDaticat" cssClass="sectionbut" text="+ Dati categoria" style="width: 100%; background-color: lightblue; color: black; spadding: 5; height: 40;"/>
   <ListView  id="lvdaticat" visibility="collapsed" >
	 <ListView.itemTemplate>
	 <GridLayout columns="4*,6*">
       <Label text="{{ col1}}" col="0" textWrap="true" cssClass="match"  />
	   <Label text="{{ col2 }}" textWrap="true" col="1" cssClass="atleta" />
	   <!--<Label text="{{ matches }}" textWrap="true" col="2" cssClass="risult" />
     <Label text="{{ matchesdisputati }}" textWrap="true" col="3"  cssClass="risult" />-->
	  </GridLayout>
    </ListView.itemTemplate>
    </ListView>
  
  <Button id="lbavvers" cssClass="sectionbut" tap="toggleAvversari" text="+ Avversari" style="width: 100%; background-color: lightblue; color: black; spadding: 5; height: 40;"/>
   <ListView  id="lvavvers" visibility="collapsed" >
	 <ListView.itemTemplate>
	 <GridLayout columns="*,*">
       <Label text="{{ sesso+' - '+nome}}" col="0" textWrap="true" cssClass="match"  />
	   <Label text="{{ societa }}" textWrap="true" col="1" cssClass="atleta" />
	   <!--<Label text="{{ matches }}" textWrap="true" col="2" cssClass="risult" />
     <Label text="{{ matchesdisputati }}" textWrap="true" col="3"  cssClass="risult" />-->
	  </GridLayout>
    </ListView.itemTemplate>
	</ListView>

  <Button tap="toggleTabulati" cssClass="sectionbut" text="+ Tabulato" style="width: 100%; background-color: lightblue; color: black; spadding: 5; height: 40;"/>

  <ListView  id="lvtabulati" visibility="collapsed" height="500" rowHeight="500" >
	 <ListView.itemTemplate>
   
    <GridLayout rows="*,40">
   

   <Image src="{{tabimage}}" stretch="fill" />
  
   <Button tap="tapUrl" row="1" text="Apri nel browser" style="width: 70%; background-color: #222; color: white;"/>
   </GridLayout>
    </ListView.itemTemplate>
	</ListView>


<Button tap="toggleHistory" cssClass="sectionbut" text="+ Storico Gare" style="width: 100%; background-color: lightblue; color: black; spadding: 5; height: 40;"/>
  
		   <ListView  id="lvhist" visibility="collapsed" >
	 <ListView.itemTemplate>
	 <GridLayout columns="*,40,40,40">
       <Label text="{{ data+' - '+location}}" col="0" textWrap="true" cssClass="match"  />
	   <Label text="{{ medaglia }}" textWrap="true" col="1" cssClass="atleta" />
	   <Label text="{{ matches }}" textWrap="true" col="2" cssClass="risult" />
     <Label text="{{ matchesdisputati }}" textWrap="true" col="3"  cssClass="risult" />
	  </GridLayout>
    </ListView.itemTemplate>
	</ListView>

</StackLayout>
 <!--<ScrollView>
<Label text="scroll"/>

  

  </ScrollView>-->
	
	</StackLayout>

	

  
</Page>
