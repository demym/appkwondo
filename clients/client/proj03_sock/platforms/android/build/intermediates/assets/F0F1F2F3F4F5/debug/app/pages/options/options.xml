<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
   <ActionBar title="Impostazioni" cssClass="actionbar">
   <NavigationButton android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    <ActionBar.actionItems>
	    
        <!--<ActionItem text="Gare"  ios.position="left" android.position="left" />
        <ActionItem text="right" ios.position="right"/>-->
        <ActionItem text="pop"   ios.position="right"  android.position="popup"/>
      </ActionBar.actionItems>
	</ActionBar> 

 <GridLayout rows="*,50">
  <ListView row="0" items="{{ options }}" id="lv1" itemTap="listViewItemTap">
	 <ListView.itemTemplate>
   <GridLayout columns="*,50">
       <Label col="0" text="{{ text }}" textWrap="true" class="lvitem" />
       <Switch col="1" checked="{{value}}"/>
    </GridLayout>     
    </ListView.itemTemplate>
	</ListView>
	<Button row="1" text="Applica" style="width: 100%" tap="applySettings"  />
</GridLayout>

</Page>
