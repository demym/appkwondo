shownModally="onShownModally"
loaded="pageLoaded" 

>

<StackLayout  class="stack" orientation="vertical">
<Button id="reset" class="filterbut"  tap="resetFilters" style="background-color: green; color: white" text="RESET FILTRI"/>
<StackLayout style="height: 30" />
