 <Button id="categoria" class="filterbut"  tap="setFilter" text="CATEGORIA (Tutte)"/>
 <Button id="medaglie" class="filterbut"  tap="setFilter" text="MEDAGLIE (Tutte)"/>
 <Button id="quadrato" class="filterbut"  tap="setFilter" text="QUADRATO (Tutti)"/>
 <StackLayout style="height: 60" />
 <Button id="applica" class="filterbut"  style="background-color: green; color: white" tap="applyFilters" text="Applica filtri"/>
</StackLayout>


 </Page>