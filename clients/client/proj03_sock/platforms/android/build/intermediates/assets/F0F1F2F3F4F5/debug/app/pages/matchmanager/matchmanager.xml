<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
   <ActionBar title="Gestione match" cssClass="actionbar">
   <NavigationButton android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    <ActionBar.actionItems>
	    
        <!--<ActionItem text="Gare"  ios.position="left" android.position="left" />
        <ActionItem text="right" ios.position="right"/>-->
        <ActionItem text="pop"   ios.position="right"  android.position="popup"/>
      </ActionBar.actionItems>
	</ActionBar> 
  <StackLayout>
  
  <GridLayout columns="150,*" rows="35,45">
  <Label id="matchlabel" colSpan="2" row="0"/>
  <Label text="Tempo reale" col="0" row="1"/><Switch row="1" col="1" id="rtswitch" checked="{{ realtime }}" propertyChange="rtChanged"/>
  </GridLayout>
  <GridLayout columns="*,*,*,*,*" rows="60,60,60,60">
  
  
    <Button id="butround1" class="roundbutton" text="R1" col="0" row="0" tap="butConsoleTap"/>
  <Button id="butround2" class="roundbutton" text="R2" col="1" row="0" tap="butConsoleTap"/>
  <Button id="butround3" class="roundbutton" text="R3" col="2" row="0" tap="butConsoleTap"/>
  <Button id="butroundgp" class="roundbutton" text="GP" col="3" row="0" tap="butConsoleTap"/>
  <Button id="butfineround" text="FR" col="4" row="0" tap="butConsoleTap"/>
  
  
  
  <Button id="butplus1" class="plusbut" text="+" col="0" row="1" onTap="butConsoleTap"/>
  <Button id="butminus1" class="plusbut" text="-" col="1" row="1" onTap="butConsoleTap"/>
  <TextField id="risult1" text="0-0" col="2" row="1"/>
  <Button id="butplus2" class="plusbut" text="+" col="3" row="1" onTap="butConsoleTap"/>
  <Button id="butminus2" class="plusbut" text="-" col="4" row="1" onTap="butConsoleTap"/>
  
  <Button id="butsave" class="savebut" colSpan="5" text="SALVA" col="0" row="2" tap="saveResult" />
  
  
  </GridLayout>
  <ListView items="{{ atleti }}" id="lv1" itemTap="listViewItemTap">
	 <ListView.itemTemplate>
       <Label text="{{ doc.nome }}" textWrap="true" class="lvitem" />
	   
    </ListView.itemTemplate>
	</ListView>
	
 </StackLayout>
</Page>
